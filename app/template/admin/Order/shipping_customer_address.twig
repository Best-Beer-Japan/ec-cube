<script>
    $('.set-customer-address').on('click', function() {
        $.ajax({
            url: '{{ url('customize_admin_order_customer_address_by_id') }}',
            type: 'POST',
            dataType: 'json',
            data: {'id': this.dataset.customer}
        }).done(function(data) {
            // 顧客情報をフォームにセットする.
            $('#form_shippings_{{ item_index }}_name_name01').val(data['name01']);
            $('#form_shippings_{{ item_index }}_name_name02').val(data['name02']);
            $('#form_shippings_{{ item_index }}_kana_kana01').val(data['kana01']);
            $('#form_shippings_{{ item_index }}_kana_kana02').val(data['kana02']);
            $('#form_shippings_{{ item_index }}_postal_code').val(data['postal_code']);
            $('#form_shippings_{{ item_index }}_address_pref').val(data['pref']);
            $('#form_shippings_{{ item_index }}_address_addr01').val(data['addr01']);
            $('#form_shippings_{{ item_index }}_address_addr02').val(data['addr02']);
            $('#form_shippings_{{ item_index }}_phone_number').val(data['phone_number']);
            $('#form_shippings_{{ item_index }}_company_name').val(data['company_name']);
            $('#form_shippings_{{ item_index }}_customize_store_name').val(data['customize_store_name']);
            // モーダルを閉じる.
            $('#customerAddressModal').modal('hide');
        }).fail(function(data) {
            alert('customer address (by id) failed.');
        });
    });

    // pagenation
    $('#customer_address_pagination a').on('click', function(event) {
        if (!$(this).parent().is('.active')) {
            var list = $('#customerAddressModalList');
            list.children().remove();

            $.ajax({
                url: $(this).attr('href'),
                type: 'GET',
                dataType: 'html'
            }).done(function(data) {
                $('#customerAddressModalList').html(data);
            }).fail(function(data) {
                alert('customer address failed.');
            });
        }
        event.preventDefault();
    });
</script>

<table class="table table-striped">
    <thead class="table-active">
    <tr>
        <th class="pt-2 pb-2 pl-3">{{ 'admin.common.id'|trans }}</th>
        <th class="pt-2 pb-2">{{ 'admin.common.name'|trans }}</th>
        <th class="pt-2 pb-2">{{ 'admin.common.phone_number'|trans }}</th>
        <th class="pt-2 pb-2">{{ 'admin.common.address'|trans }}</th>
        <th class="pt-2 pb-2 pl-5">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {% for CustomerAddress in data %}
        <tr>
            <td class="text-center"><span>{{ CustomerAddress.id }}</span></td>
            <td><span>{{ CustomerAddress.name }}</span></td>
            <td><span>{{ CustomerAddress.phone_number }}</span></td>
            <td><span>{{ CustomerAddress.address }}</span></td>
            <td>
                <div class="row justify-content-end pr-2">
                    <button type="button" class="btn btn-ec-actionIcon set-customer-address" data-customer="{{ CustomerAddress.id }}"><i class="fa fa-plus fa-lg text-secondary" aria-hidden="true"></i></button>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% if pagination is not null and pagination.totalItemCount > 0 %}
    <div id="customer_address_pagination" class="row justify-content-md-center mb-4">
        {% include '@admin/pager.twig' with {'pages': pagination.paginationData, 'routes': 'customize_admin_order_customer_address_page'} %}
    </div>
{% endif %}
